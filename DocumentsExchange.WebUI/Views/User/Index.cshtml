@using DocumentsExchange.WebUI.ViewModels
@model DocumentsExchange.WebUI.ViewModels.UserViewModel

<div class="container-fluid" id="usersTable">
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                @foreach (var name in UserViewModel.PropertyNames)
                {
                    <th>@name</th>
                }
            </tr>
        </thead>
        <tbody>
            @{
                var users = Model.Users;
                if (users != null)
                {
                    foreach (var user in users)
                    {
                        <tr>
                            <td>
                                <span class="lead">@user.Id</span>
                            </td>

                            <td>
                                <span class="lead">@user.FullName</span>
                            </td>

                            <td>
                                <span class="lead">@user.UserName</span>
                            </td>

                            <td>
                                <span class="lead">@user.IsActive</span>
                            </td>

                            @*<td>
                                <span class="lead">@user.Role</span>
                            </td>*@

                            @*<td>
                                <span class="lead">@user.ActivityDate</span>
                            </td>*@
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>