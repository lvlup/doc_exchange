@model DocumentsExchange.DataLayer.Entity.FileCategory

<div class="container">
    <h3>Добавить тип документа:</h3>

    @using (Html.BeginForm("Edit", "FileCategory", null, FormMethod.Post, new { id = "EditFileCategoryForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.Partial("_FileCategory")

        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" id="editFileCategoryBtn">Сохранить</button>
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @Html.ActionLink("Удалить", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
            </div>
         </div>

    }
</div>