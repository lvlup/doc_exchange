@model DocumentsExchange.DataLayer.Entity.FileCategory

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.CreatedDateTime)

<div data-val-summary>

</div>

<div class="form-group">
    @Html.LabelFor(p => p.IsActive, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-10">
        @Html.CheckBoxFor(p => p.IsActive, new { @class = "form-control", tabindex = 1 })
        @Html.ValidationMessageFor(model => model.IsActive, null, new { @class = "text-danger" })
    </div>
</div>


<div class="form-group">
    <label class="col-sm-2 control-label">Название:</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Name, null, new { @class = "text-danger", @data_val_field = "true" })
    </div>
</div>
