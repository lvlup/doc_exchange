@{
    Layout = null;
}

<div style="height: 100%; min-height: 1px; position: relative">
    <div id="SiteControlTabs" role="tabpanel">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">

            <li class="active">
                <a href="javascript:void(0)" role="tab" data-url="@Url.Action("Index", "ActiveSite")">Активность сайта</a>
            </li>

            <li>
                <a href="javascript:void(0)" role="tab" data-url="@Url.Action("Index", "Ip")">Заблокированные ip-адреса</a>
            </li>

        </ul>
    </div>
    <div id="siteControlTabContent" role="tabpanel" class="tab-pane active" style="height: 100%; position: relative; min-height: 1px;">
        @Html.Action("Index", "ActiveSite")
    </div>
</div>

<script>
    $(function () {
        var contentLoader = new Helpers.ContentLoader({
            content: $('#siteControlTabContent')
        });

        $('#SiteControlTabs').on('click', '> ul[role=tablist] > li > a[data-url]', function (e) {
            var $link = $(this).closest('li').addClass('active').siblings().removeClass('active').end().end();
            contentLoader.load({
                url: $link.data('url')
            });
        });
    });
</script>